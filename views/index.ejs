        <ul>
                 <%  let messageTotal = 0 %>
                 <% for(let i = 0; i < allMessages.length; i++) { %>
                    <li> 
                    <%  messageTotal = messageTotal + 1 %>
                 <%    if (i%2) {  %>
                 <div class="container darker">
                     <%    } else { %>
                         <div class="container">
                  <%   }  %>

        <div class="container">  
               
                        
        <!-- LI PRINTED EACH LOOP             -->
                <%    if (i%2) {  %>
                    <img src="icon2.png" style="float:left" alt="i%2 =true">
                 <%    } else { %>
                    <img src="icon3.png" style="float:left" alt="i%2 =false">
              <%   }  %>


          
              <a href="/messages/<%=allMessages[i].id %>">        <%=allMessages[i].user; %>:   </a>
              <div class="like" style="float:right">
                <button style= "color:red"><i class="fas fa-heart"></i>
                   </button>
                <span class="count">0</span>
              </div>
              <%=allMessages[i].message; %> 
         
                    <span class="time-right">  <br>
                     <%=allMessages[i].createdAt; %> </span>
                   
